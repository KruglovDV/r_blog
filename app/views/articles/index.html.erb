<h1 aligin="center">Articles</h1>
<div style="margin: auto; width: fit-content">
  <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Username
      </th>
      <th>
        Created
      </th>
       <th>
        Actions
      </th>
     </tr>
  </thead>
  <% @articles.each do |article| %>
  <tbody>
    <tr scope="row">
      <td><%= link_to article.title, article_path(article) %></td>
      <td>
        <%= article.user.username %>
      </td>
      <td>
        <%= time_ago_in_words(article.created_at) %>
      </td>
      <td>
        <%= link_to 'Show', article_path(article), class: "btn btn-sm btn-info" %>
        <% if (logged_in? && current_user == article.user) or current_user.admin? %>
        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
<div style="margin: auto; width: fit-content">
  <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
